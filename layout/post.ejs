<div id="content">
    <div class="title2">
        <%- page.title %>
    </div>
    <span class="postdate"><%- date(page.date,'YYYY/MM/DD') %></span>
    <div class="content">
        <%- page.content %>
    </div>
</div>

<style type="text/css">
  .postdate{
        color: rgba(150, 142, 142, 0.568);
        margin-left: 20px;
    }
    #content{
        width: 88%;
        height: 100%;
        margin: 30px 10px 30px 6%;
    }
    .title2{
        width: 100%;
        font-size: 20px;
        color: #e06c75;
        padding-bottom: 20px;
    }
    
    .content {
    padding: 30px;
}
.content * {
    margin: 30px 0;
}


.content h1,
.content h2,
.content h3,
.content h4,
.content h5,
.content h6 {
    line-height: 40px;
    margin: 20px 0 15px;
}


.content h1 {
    font-size: 32px;
    font-weight: 900;
    padding-bottom: 10px;
    border-bottom: 2px solid #e06c75;
}

.content h2 {
    font-size: 25px;
    border-left: 3px solid #73b1e0;
    padding-left: 10px;
}

.content h3 {
    font-size: 22px
}

.content a {
    color: #e06c75;
    text-decoration: none;
}

.content a:hover {
    border-bottom: 1px solid;
}

.content h1 a:hover{
    border-bottom: none;
}

.content code {
    border-radius: 3px;
    box-shadow: 0px 0px 5px #999;
}

.content img {
    max-width: 100%;
    height: auto;
    border-radius: 5px;
    box-shadow: 0px 0px 8px #999;
}

.content pre {
    font-size: 14px;
    margin: 20px 0 15px;
}

.content p {
    margin: 0 0 10px;
    line-height: 30px
}

/* 表格处理 */
.content table {
  width: 100%;
  border: 0;
  margin: 20px 0 50px 0;
  border-collapse: collapse;
  border-spacing: 0;
  line-height: 35px;
  border-radius: 8px;
  box-shadow: 0px 0px 5px #999;
}

.content table th {
  background: #73b1e0;
  font-weight: 800;
  font-size: 18px;
  text-align: left;
  line-height: 35px;
  color: #FFF;
}

.content table tr:nth-child(odd) {
  background: #F4F4F4;
}

.content table tr:hover,
.content table td:hover {
  background: #badbf5;
  color: #FFF;
}

.content table td, table th {
  padding: 5px 20px 5px 20px
}

.content table tr:first-child th:first-child {
  border-top-left-radius: 3px;
}

.content table tr:first-child th:last-child {
  border-top-right-radius: 3px;
}

.content table tr:last-child td:first-child {
  border-bottom-left-radius: 3px;
}

.content table tr:last-child td:last-child {
  border-bottom-right-radius: 3px;
}

</style>

<script type="text/javascript">
    window.onload=function(){
        var h1=document.documentElement.clientHeight;
        document.getElementById("content").style.minHeight=h1+"px";
        var w1=document.documentElement.clientWidth;
        if(w1 <= 800){
            document.getElementById("content").style.width="94%";
            document.getElementById("content").style.marginLeft="4%";
        }else{
            document.getElementById("content").style.width="60%";
            document.getElementById("content").style.marginLeft="20%";
        }; 
    }
    window.onresize=function(){
        var w10=document.documentElement.clientWidth;
        if(w10 <= 800){
            document.getElementById("content").style.width="94%";
            document.getElementById("content").style.marginLeft="4%";
        }else{
            document.getElementById("content").style.width="60%";
            document.getElementById("content").style.marginLeft="20%";
        }; 
        
    }
</script>